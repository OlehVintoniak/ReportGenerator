@page
@model ReportGenerator.Pages.Students.UpdateModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="container">
    <form method="post" class="form-horizontal">
        <div style="margin-top: 30px; margin-bottom: 30px">
            <div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Ім'я:</label>
                    <div class="col-sm-4">
                        <input required type="text" class="form-control" name="firstName" value="@Model._student.FirstName" placeholder="Введіть ім'я">
                    </div>
                </div>
            </div>
            <div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Прізвище:</label>
                    <div class="col-sm-4">
                        <input required type="text" class="form-control" name="lastName" value="@Model._student.LastName" placeholder="Введіть прізвище">
                    </div>
                </div>
            </div>
            <div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">По Батькові:</label>
                    <div class="col-sm-4">
                        <input required type="text" class="form-control" name="fatherName" value="@Model._student.FatherName" placeholder="Введіть по батькові">
                    </div>
                </div>
            </div>
            <div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" style="margin-left: 15px">Курс:</label>
                    <select value="@Model._student.Course" id="course" name="course">
                        @foreach (var course in Model._courses)
                        {
                            if (course == Model._student.Course)
                            {
                                <option selected="selected" value="@course">@course</option>
                            }
                            else
                            {
                                <option value="@course">@course</option>
                            }
                        }
                    </select>
                </div>
            </div>
        </div>
        <input class="btn btn-success" type="submit" value="Редагувати" />
    </form>
</div>






