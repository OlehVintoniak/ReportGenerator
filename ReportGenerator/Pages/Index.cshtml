@page
@model ReportGenerator.Pages.Reports.Study.IndexModel
@{
  
}

    <div class="container">
        <h1 style="margin: 30px 0 30px 40%"><i>Створення довідки</i></h1>
        <form method="get" style="margin-bottom: 15px">
            <label for="courseNumber" class="col-sm-3 col-form-label">Виберіть курс</label>
            <select required id="courseNumber" name="courseNumber" type="submit">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
            </select>
            <input style="margin-left: 15px" class="btn btn-default" type="submit" value="Вибрати" />
        </form>
        <form method="post">
            <div class="form-group row">
                <label for="studens" class="col-sm-3 col-form-label" style="margin-left: 15px">Виберіть студента</label>
                <select required id="studens" name="studentId">
                    @foreach (var student in Model.Students)
                    {
                        <option value="@student.Id">@student.FirstName @student.LastName</option>
                    }
                </select>
            </div>
            <div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">
                        Введіть повне найменування
                        підприємства, організації, установи
                    </label>
                    <div class="col-sm-4">
                        <input required type="text" class="form-control" name="organizationName" placeholder="Назва організації">
                    </div>
                </div>
            </div>
            <div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Початкова дата заїзду</label>
                    <div class="col-sm-4">
                        <input required type="date" class="form-control" name="dateFrom" placeholder="Group">
                    </div>
                </div>
            </div>
            <div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Кінцева дата заїзду</label>
                    <div class="col-sm-4">
                        <input type="date" class="form-control" name="dateTo" placeholder="Group">
                    </div>
                </div>
            </div>
            <p><h4>Довідка-виклик після формування і друку<br> обов'язково реєструється в деканаті</h4></p>
            <input class="btn btn-success" type="submit" value="Згенерувати" />
        </form>
    </div>