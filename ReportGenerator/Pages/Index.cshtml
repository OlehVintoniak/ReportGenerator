@page
@model ReportGenerator.Pages.Reports.Study.IndexModel
@{
}

<div class="container">
    <form method="post">
        <h1 style="margin: 30px 0 30px 40%"><i>Створення довідки</i></h1>
        <div class="form-group row">
            <label for="studens" class="col-sm-3 col-form-label" style="margin-left: 15px">Виберіть студента</label>
            <select id="studens" name="studentId">
                @foreach (var student in Model.Students)
                {
                    <option value="@student.Id">@student.FirstName @student.LastName</option>
                }
            </select>
        </div>
        <div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-3 col-form-label">
                    Введіть повне найменування
                    підприємства, організації, установи
                </label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="inputEmail3" name="organizationName" placeholder="Назва організації">
                </div>
            </div>
        </div>
        <div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-3 col-form-label">Початкова дата заїзду</label>
                <div class="col-sm-4">
                    <input type="date" class="form-control" id="inputEmail3" name="dateFrom" placeholder="Group">
                </div>
            </div>
        </div>
        <div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-3 col-form-label">Кінцева дата заїзду</label>
                <div class="col-sm-4">
                    <input type="date" class="form-control" id="inputEmail3" name="dateTo" placeholder="Group">
                </div>
            </div>
        </div>
        <p><h4>Довідка-виклик після формування і друку<br> обов'язково реєструється в деканаті</h4></p>
        <input class="btn btn-success" type="submit" value="Згенерувати" />
    </form>
</div>